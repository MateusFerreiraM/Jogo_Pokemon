<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaPokedexController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Pokédex">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Button onAction="#onVerTodosClick" prefWidth="200.0" text="Ver Todos os Pokémon" />
        <Button onAction="#onVerMeusPokemonClick" prefWidth="200.0" text="Ver Meus Pokémon" />
        <Button onAction="#onVerInfoTreinadorClick" prefWidth="200.0" text="Ver Informações do Treinador" />
        <Button onAction="#onVoltarClick" prefWidth="200.0" text="Voltar ao Menu Principal" />
    </children>
</VBox>