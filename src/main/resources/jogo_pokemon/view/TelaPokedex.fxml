<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" 
      stylesheets="@styles.css" 
      styleClass="background-root" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="jogo_pokemon.controller.TelaPokedexController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Text text="Pokédex" styleClass="title, TelaPokedex-title" />

        <Button onAction="#onVerTodosClick" prefWidth="220.0" text="Todos os Pokémon" styleClass="button, TelaPokedex-button"/>
        <Button onAction="#onVerInfoTreinadorClick" prefWidth="220.0" text="Informações do Treinador" styleClass="button, TelaPokedex-button"/>
        <Button onAction="#onVoltarClick" prefWidth="220.0" text="Voltar ao Menu Principal" styleClass="button, TelaPokedex-button"/>
    </children>
</VBox>