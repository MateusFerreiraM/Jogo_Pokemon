<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaSelecionarTreinadorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Selecionar Treinador">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <ListView fx:id="listaTreinadores" prefHeight="200.0" />
    <Button fx:id="btnConfirmar" onAction="#onConfirmarClick" text="Confirmar" />
    <Button fx:id="btnVoltar" onAction="#onVoltarClick" text="Voltar" />
</VBox>