<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER"
      prefHeight="400.0"
      prefWidth="600.0"
      spacing="15.0"
      styleClass="background-root"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jogo_pokemon.view.controller.TelaSelecionarTreinadorController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text text="Selecionar Treinador" styleClass="title, TelaSelecionarTreinador-title" /> 

    <ListView fx:id="listaTreinadores" prefHeight="200.0" styleClass="list-view" />

    <Button fx:id="btnConfirmar" onAction="#onConfirmarClick" text="Confirmar" styleClass="button"/>
    <Button fx:id="btnVoltar" onAction="#onVoltarClick" text="Voltar" styleClass="button"/>
</VBox>