<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaPrimeiraEscolhaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="labelBoasVindas" text="Olá, [Treinador]! Escolha o seu primeiro Pokémon:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Button onAction="#onCharmanderClick" prefWidth="150.0" text="Charmander" />
    <Button onAction="#onSquirtleClick" prefWidth="150.0" text="Squirtle" />
    <Button onAction="#onBulbasaurClick" prefWidth="150.0" text="Bulbasaur" />
    <Button onAction="#onPikachuClick" prefWidth="150.0" text="Pikachu" />
</VBox>