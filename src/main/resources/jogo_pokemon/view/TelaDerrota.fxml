<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" 
      stylesheets="@styles.css"
      styleClass="derrota-root" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="jogo_pokemon.controller.TelaDerrotaController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Text styleClass="TelaDerrota-title" text="DERROTA" />

        <Label text="Treine mais e volte mais forte!" styleClass="label, TelaDerrota-label" />

        <Label text="Lembre-se: até o Pikachu já perdeu batalhas!" styleClass="label, TelaDerrota-label2" />

        <Button onAction="#onVoltarAoMenuClick" text="Voltar ao Menu Principal" styleClass="button" />
    </children>
</VBox>