<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER"
      maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0"
      prefWidth="600.0"
      spacing="20.0"
      styleClass="menu-root"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jogo_pokemon.controller.TelaInicialController">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <Text text="Pokemon" styleClass="title-text" />
      <Button fx:id="btnSelecionarTreinador" onAction="#onSelecionarTreinadorClick" prefWidth="200.0" text="Selecionar Treinador" styleClass="button button-menu" />
      <Button fx:id="btnCriarTreinador" onAction="#onCriarTreinadorClick" prefWidth="200.0" text="Criar Treinador" styleClass="button button-menu" />
      <Button fx:id="btnSair" onAction="#onSairClick" prefWidth="200.0" text="Sair" styleClass="button button-menu" />
   </children>
</VBox>
