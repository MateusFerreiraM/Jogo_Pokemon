<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="menu-root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaConfirmarBatalhaController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="labelDesafio" text="Tem a certeza que quer desafiar [Líder]?" textAlignment="CENTER" wrapText="true" styleClass="boas-vindas-label">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <!-- ImageView para mostrar o Pokémon do oponente -->
      <ImageView fx:id="imgOponente" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" />
      <HBox alignment="CENTER" spacing="20">
         <Button onAction="#onConfirmarClick" prefWidth="150.0" text="Lutar!" styleClass="button button-form" />
         <Button onAction="#onVoltarClick" prefWidth="150.0" text="Voltar" styleClass="button button-form" />
      </HBox>
   </children>
</VBox>
