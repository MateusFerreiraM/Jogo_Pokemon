<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaVitoriaController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="title-label" text="VITÓRIA!" />
      <Label text="Como recompensa, você recebeu um novo Pokémon:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="imgPokemonRecompensa" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="labelPokemonRecompensa" text="[Pokémon]">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button onAction="#onVoltarAoMenuClick" text="Voltar ao Menu Principal" />
   </children>
</VBox>