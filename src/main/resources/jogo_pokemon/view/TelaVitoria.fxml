<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="600.0" spacing="10.0" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="jogo_pokemon.controller.TelaVitoriaController"
      styleClass="vitoria-root">
      
    <padding>
        <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="VITÓRIA!" styleClass="vitoria-title" />

        <Label text="Como recompensa, você recebeu um" styleClass="vitoria-subtitle" />

        <ImageView fx:id="imgPokemonRecompensa" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets left="15.0" />
            </VBox.margin>
        </ImageView>

        <Label fx:id="labelPokemonRecompensa" text="[Pokémon]" styleClass="pokemon-recompensa-nome">
            <VBox.margin>
                <Insets left="30.0" />
            </VBox.margin>
        </Label>

        <Button onAction="#onVoltarAoMenuClick" text="Voltar ao Menu Principal" styleClass="button, button-vitoria" />
    </children>
</VBox>