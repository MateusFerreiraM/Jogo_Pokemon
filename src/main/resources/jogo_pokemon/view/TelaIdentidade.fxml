<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jogo_pokemon.controller.TelaIdentidadeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Identidade do Treinador">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <padding>
                <Insets left="150.0" />
            </padding>
            <children>
                <Label text="Nome:" GridPane.rowIndex="0" />
                <Label fx:id="labelNome" text="[Nome]" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="ID:" GridPane.rowIndex="1" />
                <Label fx:id="labelId" text="[ID]" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Região:" GridPane.rowIndex="2" />
                <Label fx:id="labelRegiao" text="[Região]" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Pokémon Capturados:" GridPane.rowIndex="3" />
                <Label fx:id="labelQtdPokemon" text="[Qtd]" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <Button onAction="#onVoltarClick" text="Voltar" />
    </children>
</VBox>